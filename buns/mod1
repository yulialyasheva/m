public class Person {
    private String name;
    private int age;
    private Pet pet;

    public Person(String name, int age, Pet pet) {
        this.name = name;
        this.age = age;
        this.pet = pet;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public Pet getPet() {
        return pet;
    }

    public void setPet(Pet pet) {
        this.pet = pet;
    }
}

public abstract class Pet {
    private String name;

    public Pet(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public abstract void makeSound();
}

public class Dog extends Pet {

    public Dog(String name) {
        super(name);
    }

    public void makeSound() {
        System.out.println("Гав-гав!");
    }
}
<!-- XML-конфигурация для классов Person, Pet и Dog -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Бин для класса Person -->
  <bean id="person" class="com.example.Person">
      <!-- Установка свойств имени, возраста и питомца -->
      <property name="name" value="Анна"/>
      <property name="age" value="25"/>
      <property name="pet" ref="dog"/>
  </bean>

  <!-- Бин для класса Dog -->
  <bean id="dog" class="com.example.Dog">
      <!-- Установка свойства имени -->
      <property name="name" value="Бобик"/>
  </bean>

</beans>
public class Main {

  public static void main(String[] args) {
      ApplicationContext context = new ClassPathXmlApplicationContext("applicationContext.xml");

      Person person = context.getBean("person", Person.class);

      System.out.println("Имя: " + person.getName());
      System.out.println("Возраст: " + person.getAge());
      System.out.println("Питомец: " + person.getPet().getName());
      person.getPet().makeSound();

      ((ClassPathXmlApplicationContext) context).close();
  }
}
public class Main {

  public static void main(String[] args) {
      AnnotationConfigApplicationContext context = new AnnotationConfigApplicationContext();

      context.register(Person.class);
      context.register(Pet.class);
      context.register(Dog.class);

      context.refresh();

      Person person = context.getBean(Person.class);

      System.out.println("Имя: " + person.getName());
      System.out.println("Возраст: " + person.getAge());
      System.out.println("Питомец: " + person.getPet().getName());
      person.getPet().makeSound();

      context.close();
  }
}
